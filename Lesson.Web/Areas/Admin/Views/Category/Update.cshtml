

@model CategoryUpdateDTO



<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light"> Məqalə dəyişdirilməsi /</span> Məqalələr
    </h4>


    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                 <div asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Category" asp-action="Update" method="post" >
                    <div class="card-body">
                        <input type="hidden" asp-for="Id"/>
                        <div class="mt-2" class="form-group">
                            <label asp-for="Name" for="defaultFormControlInput" class="form-label">Başlıq</label>
                            <input asp-for="Name" type="text" class="form-control" id="defaultFormControlInput" placeholder="Başlıq..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3" >
                            <button class="btn btn-success" type="submit">Yadda saxla</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>